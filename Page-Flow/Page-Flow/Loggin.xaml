<Window x:Class="Page_Flow.Loggin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Page_Flow"
        mc:Ignorable="d"
        Title="Loggin" Height="250" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="User Name:" FontSize="30" Background="LightGray" BorderBrush="Gray" BorderThickness="2" Height="40.6" Padding="0"></Label>
        <Label Grid.Row="1" Content="Password:" FontSize="30" Background="LightGray" BorderBrush="Gray" BorderThickness="2" Height="40.6" Padding="0"></Label>

        <TextBox x:Name="user_name" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" MinWidth="300" Height="40.6" BorderBrush="LightGray" BorderThickness="2" Padding="0" FontSize="20"></TextBox>
        <TextBox x:Name="password" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" MinWidth="300" Height="40.6" BorderBrush="LightGray" BorderThickness="2"  Padding="0" FontSize="20"></TextBox>

        <Button Grid.Row="2" Grid.Column="0" Margin="10" Content="Sign in" FontSize="30" Click="Button_Click" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2"></Button>
        <Button Grid.Row="2" Grid.Column="1" Margin="10" Content="Sign up" FontSize="30" Click="Button_Click_1" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2"></Button>
        <Button Grid.Row="2" Grid.Column="2" Margin="10" Content="Sign out" FontSize="30" Click="Button_Click_2" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2"></Button>
        
        
    </Grid>
</Window>
