<Window x:Class="Page_Flow.CreateBookOrLibrary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Page_Flow"
        mc:Ignorable="d"
        Title="CreateBookOrLibrary" Height="250" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37.5"/>
            <RowDefinition Height="37.5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LabelÜberschrift" Grid.Row="0" Content="Language Select" FontSize="20" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2"/>
        <Label x:Name="LabelPath" Grid.Row="1" Content="path > path > path > path > path > path > ...." Height="30" VerticalAlignment="Top" Background="WhiteSmoke" Margin="3"/>
        
        <StackPanel x:Name="View" Grid.Row="2">
            <Button Content="Create Library" Margin="10" Height="50" Click="Button_Click_1" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2"></Button>
            <Button Content="Create Book" Margin="10" Height="50" Click="Button_Click" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2"></Button>
        </StackPanel>
    </Grid>
</Window>
