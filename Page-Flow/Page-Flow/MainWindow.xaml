<Window x:Class="Page_Flow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Page_Flow"
        mc:Ignorable="d"
        Title="Page-Flow" Height="800" Width="900" MinHeight="700" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2"/>
        <Button x:Name="ButtonUpload" Grid.Column="0" Grid.Row="0" Content="⮸" FontSize="30" Background="Transparent" BorderBrush="Transparent" Foreground="CadetBlue" VerticalContentAlignment="Center" Margin="5" Click="ButtonUpload_Click"/>
        <Button x:Name="ButtonReload" Grid.Column="2" Grid.Row="0" Content="⭮" FontSize="30" Background="LightBlue" BorderBrush="Transparent" Foreground="CadetBlue" VerticalContentAlignment="Center" Margin="5" Click="ButtonReload_Click"/>
        <Button x:Name="ButtonSettings" Grid.Column="3" Grid.Row="0" Content="⛭" FontSize="30" Background="Transparent" BorderBrush="Transparent" Foreground="CadetBlue" VerticalAlignment="Center" Margin="5" Click="ButtonSettings_Click"/>
        <TextBox x:Name="TextBoxSearch" Grid.Column="1" Grid.Row="0" Background="LightCyan" BorderBrush="CadetBlue" BorderThickness="2" Margin="19" FontSize="20"/>
        <Label x:Name="LabelPath" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Content="path > path > path > path > path > path > ...." Height="30" VerticalAlignment="Top" Background="WhiteSmoke" Margin="3"/>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">
            <StackPanel x:Name="View" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"></StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
