<Window x:Class="Page_Flow.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Page_Flow"
        mc:Ignorable="d"
        Title="AddBookWindow" 
        Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Label x:Name="TextBoxTitle" Content="Krasser Titel" FontSize="30" VerticalContentAlignment="Center" Grid.Column="2" Grid.ColumnSpan="4" Grid.Row="0" Background="LightGray" BorderBrush="Gray" BorderThickness="2" Margin="5" Height="40"/>
        <Label x:Name="LabelTyp" Content="Typ:" FontSize="20" VerticalContentAlignment="center" Grid.Column="2" Grid.Row="2" Background="LightGray" BorderBrush="Gray" BorderThickness="2" Height="30.6"/>
        <Label x:Name="LabelAuthor" Content="Author:" FontSize="20" VerticalContentAlignment="Center" Grid.Column="2" Grid.Row="3" Background="LightGray" BorderBrush="Gray" BorderThickness="2" Height="30.6"/>
        <Label x:Name="LabelNote" Content="Personal Note:" FontSize="20" VerticalContentAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Background="LightGray" BorderBrush="Gray" BorderThickness="2" Height="30.6"/>
        <Label x:Name="LabelLicense" Content="License:" FontSize="20" VerticalContentAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" Background="LightGray" BorderBrush="Gray" BorderThickness="2" Height="30.6"/>
        <TextBox x:Name="TextBoxTyp" FontSize="20" VerticalAlignment="Center" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="3" Background="White" BorderBrush="LightGray" BorderThickness="2" Height="30.6"/>
        <TextBox x:Name="TextBoxAuthor" FontSize="20" VerticalAlignment="Center" Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="3" Background="White" BorderBrush="LightGray" BorderThickness="2" Height="30.6"/>
        <TextBox x:Name="TextBoxNote" FontSize="20" VerticalAlignment="Center" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="4" Background="White" BorderBrush="LightGray" BorderThickness="2" Height="30.6"/>
        <TextBox x:Name="TextBoxLicense" FontSize="20" VerticalAlignment="Center" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="4" Background="White" BorderBrush="LightGray" BorderThickness="2" Height="30.6"/>
        <local:AddLanguageControl1 x:Name="AddBookLanguage" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="7" Margin="84,0,0,0"></local:AddLanguageControl1>
        <Label x:Name="LabelBlurb" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Content="Blurb:" FontSize="20" Background="LightGray" BorderBrush="Gray" BorderThickness="2" VerticalAlignment="Top"  Height="30.6"/>
        <TextBox x:Name="TextBoxBlurb" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="4" FontSize="20" Background="White" BorderBrush="LightGray" BorderThickness="2" Height="90"/>
        <Button x:Name="ButtonAccept" Grid.Row="6" Grid.Column="6" Content="✔" FontSize="18" Foreground="CadetBlue" VerticalContentAlignment="Top" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="4" Height="30.6" Width="70"/>
        <Button x:Name="ButtonDeny" Grid.Row="6" Grid.Column="7" Content="✖" FontSize="16" Foreground="Goldenrod" Background="Gold" BorderBrush="Goldenrod" BorderThickness="2" VerticalAlignment="Bottom" Margin="4" Height="30.6" Width="70"/>
        <Image Name="ImageThumbnail" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="10"/>
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" BorderThickness="2" BorderBrush="CadetBlue"/>
        <Button x:Name="ButtonThumbnail" Content="Browse Thumbnail" FontSize="20" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2" Margin="5"/>
        <Image Grid.Column="7" HorizontalAlignment="Left" Height="100" Margin="31,27,0,0" Grid.RowSpan="3" Grid.Row="1" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
    
