<Window x:Class="Page_Flow.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Page_Flow"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TextBoxTitel" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Background="LightGray" Margin="10" FontSize="30" BorderBrush="Gray" BorderThickness="2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center">Krasser Titel</TextBox>
        <Label x:Name="LabelAuthor" Grid.Row="3" Grid.Column="1" Content="Author:" FontSize="30" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
