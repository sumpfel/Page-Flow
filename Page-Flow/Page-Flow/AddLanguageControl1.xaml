<UserControl x:Class="Page_Flow.AddLanguageControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Page_Flow"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LabelLanguage" Grid.Row="0" Grid.Column="0" Content="Language: " Background="LightGray" BorderBrush="Gray" BorderThickness="2" FontSize="27" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="190" Height="50"/>
        <Label x:Name="LabelFilePath" Grid.Row="1" Grid.Column="0" Content="File:" Background="LightGray" BorderBrush="Gray" BorderThickness="2" FontSize="27" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="190" Height="50"/>
        <Label x:Name="LabelGenerate" Grid.Row="0" Grid.Column="2" Content="Generate" Background="White" FontSize="30" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Margin="10"/>
        <TextBox x:Name="TextBoxPath" Grid.Row="1" Grid.Column="1" Background="White" HorizontalAlignment="Left" Width="390" Height="50"/>
        <Button x:Name="ButtonBrowse" Grid.Row="1" Grid.Column="3" Content="Browse" Background="LightBlue" FontSize="30" Margin="10" BorderBrush="CadetBlue" BorderThickness="2"/>
        <ComboBox x:Name="ComboBoxLanguage" Grid.Row="0" Grid.Column="1" Background="White" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Width="390" Height="50">
            <ComboBoxItem>English</ComboBoxItem>
            <ComboBoxItem>German</ComboBoxItem>
            <ComboBoxItem>Japanese</ComboBoxItem>
            <ComboBoxItem>French</ComboBoxItem>
            <ComboBoxItem>Spanish</ComboBoxItem>
            <ComboBoxItem>Chinese</ComboBoxItem>
        </ComboBox>
        <ToggleButton Grid.Column="3" Grid.Row="0" Content="Generate" FontSize="30" Margin="10" Background="LightBlue" BorderBrush="CadetBlue" BorderThickness="2"/>
    </Grid>
</UserControl>
